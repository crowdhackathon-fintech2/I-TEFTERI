<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.java.main.i_tefteri.ActualCollectionActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_actual_collection" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/PersonName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="10dp"
                android:background="@color/button2Color"
                android:enabled="false"
                android:gravity="left"/>
            <EditText
                android:id="@+id/TotalAmount"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="100dp"
                android:background="@color/button2Color"
                android:enabled="false"
                android:gravity="right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/LabelTransAmount"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/button2Color"
                android:text="Ποσόν"
                android:enabled="false"
                android:gravity="left"/>
            <EditText
                android:id="@+id/TransAmount"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="150dp"
                android:hint="0"
                android:inputType="numberDecimal"
                android:background="@color/button2Color"
                android:gravity="right"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/Labelinstallments_count"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/button2Color"
                android:enabled="false"
                android:gravity="left"
                android:text="αριθμός δόσεων"/>



            <EditText
                android:id="@+id/installments_count"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:hint="1"
                android:background="@color/button2Color"
                android:inputType="number"
                android:clickable="true"
                android:gravity="right"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/Labelfirstdate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/button2Color"
                android:enabled="false"
                android:gravity="left"
                android:text="ημερομηνία 1ης δόσης"/>



            <EditText
                android:id="@+id/firstdate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:background="@color/button2Color"
                android:inputType="date"
                android:clickable="true"
                android:gravity="right"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/Labelperiodikotita"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/button2Color"
                android:enabled="false"
                android:gravity="left"
                android:text="περιοδικότητα δόσεων"
                />


            <Spinner
                android:id="@+id/periodikotita"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textAlignment="gravity"
                android:background="@color/button2Color"/>




        </LinearLayout>

        <!--<DatePicker-->
        <!--android:id="@+id/DTPicker"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="80dp"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:visibility="invisible"-->

        <!--&gt;-->

        <!--</DatePicker>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
        android:id="@+id/SxolioPoliti"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="σχόλιο αγοραστή"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/BtnRefuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#d7a29e"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="10dp"
                android:text="απόρριψη"
                />
            <Button
                android:id="@+id/BtnAprov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/button1Color"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="200dp"
                android:text="έγκριση"
                />
        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
